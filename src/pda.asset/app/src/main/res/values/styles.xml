    <!-- 全局按钮->非通栏按钮->正向操作非通栏按钮-Blue3-purified -->
    <style name="PositiveNormalButton3" parent="NormalButton">
        <item name="android:background">@drawable/bg_btn_positive_normal_selector3</item>
        <item name="android:textColor">@color/text_btn_positive_normal</item>
