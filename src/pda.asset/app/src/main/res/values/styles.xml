        <item name="android:layout_width">@dimen/btn_banner_width</item>
        <item name="android:layout_height">@dimen/btn_banner_height</item>
        <item name="android:textColor">@color/text_btn_positive_banner</item>
    </style>

    <!-- 全局按钮->通栏按钮->正向操作通栏按钮 -->
    <style name="PositiveBannerButton" parent="BannerButton">
        <item name="android:background">@drawable/bg_btn_positive_banner_selector</item>
