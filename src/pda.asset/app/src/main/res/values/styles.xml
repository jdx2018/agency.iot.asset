    <!-- 全局控件容器 -->
    <style name="ComponentContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/com_container_height</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 自定义Dialog样式 -->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item> <!-- 边框 -->
    </style>

    <!-- 自定义弹窗视图 -->
    <style name="CustomDialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/bg_dialog</item>
    </style>

    <style name="CustomDialog21" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item><!--除去title-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Loading -->
    <style name="LoadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>  <!--是否浮在界面上-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <!-- 自定义弹窗->列表弹窗 -->
    <style name="ListDialog" parent="CustomDialog">
        <item name="android:layout_marginStart">@dimen/dialog_list_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/dialog_list_margin_end</item>
        <item name="android:layout_marginTop">@dimen/dialog_list_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/dialog_list_margin_bottom</item>
    </style>

    <!-- 自定义弹窗->简单弹窗 -->
    <style name="SimpleDialog" parent="CustomDialog">
        <item name="android:layout_width">@dimen/dialog_simple_width</item>
        <item name="android:layout_marginStart">@dimen/dialog_simple_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/dialog_simple_margin_end</item>
        <item name="android:layout_marginTop">@dimen/dialog_simple_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/dialog_simple_margin_bottom</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- 自定义弹窗->列表项 -->
    <style name="ListItemDialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dialog_list_item_height</item>
    </style>

    <!-- 表单项 -->
    <style name="FormItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/form_item_divide</item>
    </style>

    <style name="TextView_Grey">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Text_grey_title">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ListView_Header">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="cusdom_dialog_whitebg" parent="@style/cusdom_dialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="cusdom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@mipmap/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="floateditcolor">
        <item name="android:textColor">@color/blue</item>
    </style>

