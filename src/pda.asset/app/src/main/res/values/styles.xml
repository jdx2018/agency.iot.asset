<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->

        <item name="android:textAllCaps">false</item>
        <!--导航栏底色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏底色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--按钮选中或者点击获得焦点后的颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--导航栏上的标题颜色-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--和 colorAccent相反，正常状态下按钮的颜色-->
        <item name="colorControlNormal">@android:color/white</item>
        <!--Button按钮正常状态颜色-->
        <item name="colorButtonNormal">@color/accent_material_light</item>
        <!--EditText 输入框中字体的颜色-->
        <item name="editTextColor">@android:color/white</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--导航栏底色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏底色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--按钮选中或者点击获得焦点后的颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--导航栏上的标题颜色-->
        <item name="android:textColorPrimary">@color/white</item>

        <!--和 colorAccent相反，正常状态下按钮的颜色-->
        <item name="colorControlNormal">@android:color/white</item>
        <!--Button按钮正常状态颜色-->
        <item name="colorButtonNormal">@color/accent_material_light</item>
        <!--EditText 输入框中字体的颜色-->
        <item name="editTextColor">@android:color/white</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#313131</item>
        <item name="colorPrimaryDark">#313131</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="myAnimationstyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <!-- 忙提示框-Style -->
    <style name="busy_circling" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Button_yellow_deepen">
        <item name="android:background">@color/orange_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="Button_green">
        <item name="android:background">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!-- 全局布局文件 -->
    <style name="ContentView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/content_background</item>
        <item name="android:layout_marginStart">@dimen/activity_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/activity_margin_end</item>
        <item name="android:layout_marginTop">@dimen/activity_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/activity_margin_bottom</item>
        <item name="android:paddingStart">@dimen/activity_padding_start</item>
        <item name="android:paddingEnd">@dimen/activity_padding_end</item>
        <item name="android:paddingTop">@dimen/activity_padding_top</item>
        <item name="android:paddingBottom">@dimen/activity_padding_bottom</item>
    </style>

    <!-- 全局普通内容区域 -->
    <style name="ContentCommon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/content_common_divide</item>
        <item name="android:background">@drawable/bg_content_common_layer</item>
    </style>

    <!-- 全局卡片内容区域 -->
    <style name="ContentCard" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/content_card_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/content_card_margin_end</item>
        <item name="android:layout_marginBottom">@dimen/content_card_margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/content_card_margin_start</item>
        <item name="android:paddingTop">@dimen/content_card_padding_top</item>
        <item name="android:paddingEnd">@dimen/content_card_padding_end</item>
        <item name="android:paddingBottom">@dimen/content_card_padding_bottom</item>
        <item name="android:paddingStart">@dimen/content_card_padding_start</item>
        <item name="android:background">@color/white</item>

        <!-- 兼容CardView -->
        <item name="contentPaddingTop">@dimen/content_card_padding_top</item>
        <item name="contentPaddingLeft">@dimen/content_card_padding_start</item>
        <item name="contentPaddingRight">@dimen/content_card_padding_end</item>
        <item name="contentPaddingBottom">@dimen/content_card_padding_bottom</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <!-- 全局卡片内容区域 -->
    <style name="ContentCard2" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/content_card_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/content_card_margin_spadding_general</item>
        <item name="android:layout_marginBottom">@dimen/content_card_margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/content_card_margin_spadding_general</item>
        <item name="android:paddingTop">@dimen/content_card_padding_top</item>
        <item name="android:paddingEnd">@dimen/content_card_margin_spadding_general</item>
        <item name="android:paddingBottom">@dimen/content_card_padding_bottom</item>
        <item name="android:paddingStart">@dimen/content_card_margin_spadding_general</item>
        <item name="android:background">@color/white</item>

        <!-- 兼容CardView -->
        <item name="contentPaddingTop">@dimen/content_card_padding_top</item>
        <item name="contentPaddingLeft">@dimen/content_card_padding_start</item>
        <item name="contentPaddingRight">@dimen/content_card_padding_end</item>
        <item name="contentPaddingBottom">@dimen/content_card_padding_bottom</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <!-- 全局标签 -->
    <style name="Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/form_label</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <!-- 全局标签->小标签 -->
    <style name="SmallLabel" parent="Label">
        <item name="android:textSize">@dimen/font_xsmall</item>
    </style>

    <!-- 全局标签->子标题栏标签 -->
    <style name="SubToolBarLabel" parent="Label">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 全局标签->数据标签 -->
    <style name="DataLabel" parent="Label">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/form_item_label_data_spacing</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <!-- 全局标签->数据标签 -->
    <style name="DataLabel2" parent="Label">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/form_item_label_data_spacing2</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <!-- 全局标签->数据标签->子标题栏数据 -->
    <style name="SubToolBarDataLabel" parent="DataLabel">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">5dp</item>
    </style>

    <!-- 全局标签->数据标签->标题标签 -->
