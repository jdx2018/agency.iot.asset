        <item name="android:background">@drawable/bg_btn_negative_normal_selector</item>
        <item name="android:textColor">@color/text_btn_negative_normal</item>
    </style>

    <!-- 全局按钮->弹窗按钮 -->
    <style name="DialogButton" parent="Button">
        <item name="android:layout_width">@dimen/btn_dialog_width</item>
        <item name="android:layout_height">@dimen/btn_dialog_height</item>
    </style>

    <!-- 全局按钮->弹窗按钮->正向操作弹窗按钮 -->
    <style name="PositiveDialogButton" parent="DialogButton">
        <item name="android:layout_width">@dimen/btn_dialog_width</item>
        <item name="android:background">@drawable/bg_btn_positive_dialog_selector</item>
        <item name="android:textColor">@color/text_btn_positive_dialog</item>
    </style>

    <!-- 全局按钮->弹窗按钮->中性操作弹窗按钮 -->
    <style name="NeutralDialogButton" parent="DialogButton">
        <item name="android:background">@drawable/bg_btn_neutral_dialog_selector</item>
        <item name="android:textColor">@color/text_btn_neutral_dialog</item>
    </style>

    <!-- 全局按钮->弹窗按钮->反向操作弹窗按钮 -->
