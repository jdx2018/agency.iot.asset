        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_fixed_height</item>
        <item name="android:textColor">@color/text_btn_positive_fixed</item>
    </style>

    <!-- 全局按钮->固定按钮->正向固定按钮 -->
    <style name="PositiveFixedButton" parent="FixedButton">
        <item name="android:background">@drawable/bg_btn_positive_fixed_selector</item>
    </style>

    <!-- 全局按钮->通栏按钮 -->
