        <item name="android:background">@drawable/bg_btn_positive_normal_selector4</item>
        <item name="android:textColor">@color/text_btn_positive_normal</item>
    </style>

    <!-- 全局按钮->非通栏按钮->反向操作非通栏按钮 -->
