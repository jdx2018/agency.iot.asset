<?xml version="1.0" encoding="utf-8"?>

<!-- 普通内容区域样式 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 边框颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/bd_content_common" />
        </shape>
    </item>

    <!-- 主题背景色 -->
    <item
        android:bottom="1dp"
        android:top="1dp">
        <shape>
            <solid android:color="@color/bg_content_common" />
            <padding
                android:bottom="@dimen/content_common_margin_bottom"
                android:left="@dimen/content_common_margin_start"
                android:right="@dimen/content_common_margin_end"
                android:top="@dimen/content_common_margin_top" />
        </shape>
    </item>
</layer-list>