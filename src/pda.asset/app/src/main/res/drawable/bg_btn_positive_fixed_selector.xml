<?xml version="1.0" encoding="utf-8"?>

<!-- 正向固定按钮样式 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 正常状态 -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_btn_positive_fixed_normal"/>
            <corners
                android:radius="@dimen/btn_fixed_corner"/>
            <stroke
                android:width="@dimen/btn_fixed_border"
                android:color="@color/bd_btn_positive_fixed"/>
        </shape>
    </item>

    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_btn_positive_fixed_pressed"/>
            <corners
                android:radius="@dimen/btn_fixed_corner"/>
            <stroke
                android:width="@dimen/btn_fixed_border"
                android:color="@color/bd_btn_positive_fixed"/>
        </shape>
    </item>
</selector>