<?xml version="1.0" encoding="utf-8"?>

<!-- 反向操作非通栏按钮样式 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 正常状态 -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_btn_negative_normal_normal"/>
            <corners
                android:radius="@dimen/btn_normal_corner"/>
            <stroke
                android:width="@dimen/btn_normal_border"
                android:color="@color/bd_btn_negative_normal"/>
        </shape>
    </item>

    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_btn_negative_normal_pressed"/>
            <corners
                android:radius="@dimen/btn_normal_corner"/>
            <stroke
                android:width="@dimen/btn_normal_border"
                android:color="@color/bd_btn_negative_normal"/>
        </shape>
    </item>
</selector>