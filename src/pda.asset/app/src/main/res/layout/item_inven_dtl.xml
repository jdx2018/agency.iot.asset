<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ContentCard"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/lnr_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp" >

        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:visibility="gone"
            android:layout_marginTop="2dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ok_circle"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="0dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:gravity="center"
                    android:text="资产编号:"
                    android:textSize="16sp"
                    style="@style/Label"/>

                <TextView
                    android:id="@+id/tv_asset_id"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="left"
                    android:textSize="15sp"
                    android:visibility="visible"
                    style="@style/DataLabel2"
                    android:text="233"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="价值:"
                    android:textSize="16sp"
                    style="@style/Label"/>

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:maxLines="1"
                    android:layout_marginLeft="2dp"
                    android:textSize="14sp"
                    android:visibility="visible"
                    style="@style/DataLabel2"
                    android:text="4988"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    style="@style/Label"
                    android:text="资产名称:"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="left"
                    android:layout_marginLeft="0dp"
                    android:textSize="16sp"
                    android:visibility="visible"
                    style="@style/DataLabel"
                    android:text="张三"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    style="@style/Label"
                    android:text="EPC:"/>

                <TextView
                    android:id="@+id/tv_epc"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="15sp"
                    style="@style/DataLabel2"
                    android:text="690093930392"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    style="@style/Label"
                    android:text="使用人:"/>

                <TextView
                    android:id="@+id/tv_use_pesson"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="15sp"
                    style="@style/DataLabel2"
                    android:text="lucy"/>

                <TextView
                    android:id="@+id/tv_scan_status"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:maxLines="1"
                    android:layout_marginLeft="2dp"
                    android:textSize="14sp"
                    android:visibility="visible"
                    style="@style/Label"
                    android:text="已盘点"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_infor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:src="@mipmap/infor"/>

    </LinearLayout>

    <!--<include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        layout="@layout/layout_line_horizontal"
        android:visibility="visible" />-->

</android.support.v7.widget.CardView>