<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ContentCard"
    app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="2dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    style="@style/Label"
                    android:text="资产编号:"/>

                <TextView
                    android:id="@+id/tv_asset_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="16sp"
                    style="@style/DataLabel"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:text="690093930392"/>

                <TextView
                    style="@style/Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="价值:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:maxLines="1"
                    android:layout_marginLeft="2dp"
                    android:textSize="14sp"
                    android:visibility="visible"
                    style="@style/DataLabel2"
                    android:text="5"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    style="@style/Label"
                    android:text="资产名称:"/>

                <TextView
                    android:id="@+id/tv_asset_name"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="left"
                    android:layout_marginLeft="0dp"
                    android:textSize="16sp"
                    android:visibility="visible"
                    style="@style/DataLabel"
                    android:text="笔记本"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    style="@style/Label"
                    android:text="使  用  人:"/>

                <TextView
                    android:id="@+id/tv_use_pesson"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="left"
                    android:layout_marginLeft="0dp"
                    android:textSize="14sp"
                    android:visibility="visible"
                    style="@style/DataLabel"
                    android:text="张三"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    style="@style/Label"
                    android:text="购买日期:"/>

                <TextView
                    android:id="@+id/tv_buy_date"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="left"
                    android:layout_marginLeft="0dp"
                    android:textSize="16sp"
                    android:visibility="visible"
                    style="@style/DataLabel"
                    android:text="2020-07-31"/>

                <TextView
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="left"
                    android:layout_marginLeft="2dp"
                    android:textSize="16sp"
                    android:visibility="gone"
                    style="@style/Label"
                    android:text="品牌:"/>

                <TextView
                    android:id="@+id/tv_asset_brand"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:maxLines="1"
                    style="@style/DataLabel"
                    android:layout_marginLeft="2dp"
                    android:textSize="15sp"
                    android:visibility="gone"
                    android:text="联想"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    style="@style/Label"
                    android:text="资产状态/使用状态:"/>

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="left"
                    android:layout_marginLeft="0dp"
                    android:textSize="14sp"
                    android:visibility="visible"
                    style="@style/DataLabel"
                    android:text="正常"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    style="@style/Label"
                    android:text="EPC:"/>

                <TextView
                    android:id="@+id/tv_epc"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="15sp"
                    style="@style/DataLabel2"
                    android:text="690093930392"/>
            </LinearLayout>

        </LinearLayout>

</android.support.v7.widget.CardView>